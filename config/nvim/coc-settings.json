{
  "languageserver": {
    "kotlin": {
      "command": "kotlin-language-server",
      "filetypes": ["kotlin"]
    }
  },
  "coc.preferences.formatOnSaveFiletypes": [
    "typescript",
    "typescriptreact",
    "javascript",
    "javascriptreact",
    "yaml"
  ],
  "eslint.autoFixOnSave": true,
  "python.formatting.provider": "black",
  "python.linting.mypyEnabled": true
}
