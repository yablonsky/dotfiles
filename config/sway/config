# Default config for sway
#
# Copy this to ~/.config/sway/config and edit it to your liking.
#
# Read `man 5 sway` for a complete reference.

### Variables
#
# Your preferred terminal emulator
set $term alacritty
# Your preferred application launcher
# Note: it's recommended that you pass the final command to sway
set $menu rofi -show
set $wallpaper ~/Pictures/wallpaper
set $lock swaylock -i ~/Pictures/wallpaper_blur

# Colors
set $black #282c34
set $red #e06c75
set $green #98c379
set $yellow #e5c07b
set $blue #61afef
set $magenta #c678dd
set $cyan #56b6c2

set $notification_timeout 5000

### Output configuration
    output * bg $wallpaper fill
    output 'Acer Technologies XB271HU #ASMwh8mvtoHd' mode 2560x1440@143.998001Hz

### Input configuration
#
# Keyboard
#
    input type:keyboard {
        repeat_delay 300
        repeat_rate 30 
    }
#
# Built-in Laptop Keyboard
#
    input "1:1:AT_Translated_Set_2_keyboard" {
        xkb_options caps:escape
    }
#
# Touchpad
#
    input type:touchpad {
        dwt enabled
        tap disabled
        middle_emulation disabled
        click_method none
        natural_scroll enabled
    }
#
# Touchscreen
#
    input type:touch {
	    events disabled
    }
#
# You can get the names of your inputs by running: swaymsg -t get_inputs
# Read `man 5 sway-input` for more information about this section.

### Idle configuration
#
#    exec swayidle -w \
#        timeout 300 '$lock' \
#        timeout 600 'swaymsg "output * dpms off"' \
#            resume 'swaymsg "output * dpms on"' \
#        before-sleep '$lock'
#
# This will lock your screen after 300 seconds of inactivity, then turn off
# your displays after another 300 seconds, and turn your screens back on when
# resumed. It will also lock your screen before your computer goes to sleep.

#
# Status Bar:
#
    bar {
        swaybar_command waybar
    }

#
# Window Borders
#
    default_border pixel
    default_floating_border normal
    smart_borders on
	  focus_follows_mouse no
    client.focused $blue $blue $black $magenta $blue
    # client.focused_inactive #
    # client.unfocused #
    # client.placeholder #
    # client.urgent #

# 
# Misc.
#
    xwayland enable
    #output eDP-1 scale 1


### Seats config
#
# - current
# * all
# seat0 default
#
    seat * hide_cursor 1000


### Autostart
#
    exec mako


#bindswitch lid:on output eDP-1 disable
#bindswitch lid:off output eDP-1 enable

include /etc/sway/config.d/*
include ~/.config/sway/keymap
