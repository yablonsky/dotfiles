# Default config for sway
#
# Copy this to ~/.config/sway/config and edit it to your liking.
#
# Read `man 5 sway` for a complete reference.

### Variables
#
# Logo key. Use Mod1 for Alt.
set $mod Mod4
# Home row direction keys, like vim
set $left h
set $down j
set $up k
set $right l
# Your preferred terminal emulator
set $term alacritty
# Your preferred application launcher
# Note: it's recommended that you pass the final command to sway
set $menu rofi -show
set $wallpaper ~/Pictures/wallpaper
set $wallpaper_blur ~/Pictures/wallpaper_blur
set $lock swaylock -i $wallpaper_blur

set $notification_timeout 5000

### Output configuration
#
# Default wallpaper (more resolutions are available in /usr/share/backgrounds/sway/)
output * bg $wallpaper fill
#
# Example configuration:
#
#   output HDMI-A-1 resolution 1920x1080 position 1920,0
#
# You can get the names of your outputs by running: swaymsg -t get_outputs

### Idle configuration
#
# Example configuration:
#
#    exec swayidle -w \
#        timeout 300 '$lock' \
#        timeout 600 'swaymsg "output * dpms off"' \
#            resume 'swaymsg "output * dpms on"' \
#        before-sleep '$lock'
#
# This will lock your screen after 300 seconds of inactivity, then turn off
# your displays after another 300 seconds, and turn your screens back on when
# resumed. It will also lock your screen before your computer goes to sleep.

### Input configuration
#
# Laptop Keyboard
#
    input "1:1:AT_Translated_Set_2_keyboard" {
        repeat_delay 300
        repeat_rate 30 
        xkb_options caps:escape
    }

#
# Synaptics Touchpad
#
    input "2:7:SynPS/2_Synaptics_TouchPad" {
        dwt enabled
        tap disabled
        middle_emulation disabled
        click_method none
        natural_scroll enabled
    }

#
# Raydium Touchscreen
#
    input "9094:17192:Raydium_Corporation_Raydium_Touch_System" {
	    events disabled
    }

#
# You can get the names of your inputs by running: swaymsg -t get_inputs
# Read `man 5 sway-input` for more information about this section.


### Key bindings
#
# Basics:
#
    # start a terminal
    bindsym $mod+Return exec $term

    # kill focused window
    bindsym $mod+Shift+q kill

    # start your launcher
    bindsym $mod+d exec $menu

    # Drag floating windows by holding down $mod and left mouse button.
    # Resize them with right mouse button + $mod.
    # Despite the name, also works for non-floating windows.
    # Change normal to inverse to use left mouse button for resizing and right
    # mouse button for dragging.
    #floating_modifier $mod normal

    # reload the configuration file
    bindsym $mod+Shift+c reload

    bindsym $mod+Shift+x exec systemctl poweroff -i
    bindsym $mod+n exec networkmanager_dmenu
    bindsym $mod+z exec $lock
    bindsym $mod+Shift+z exec $lock && systemctl suspend
#
# Moving around:
#
    # Move your focus around
    bindsym $mod+$left focus left
    bindsym $mod+$down focus down
    bindsym $mod+$up focus up
    bindsym $mod+$right focus right
    # or use $mod+[up|down|left|right]
    #bindsym $mod+Left focus left
    #bindsym $mod+Down focus down
    #bindsym $mod+Up focus up
    #bindsym $mod+Right focus right

    # _move_ the focused window with the same, but add Shift
    bindsym $mod+Shift+$left move left
    bindsym $mod+Shift+$down move down
    bindsym $mod+Shift+$up move up
    bindsym $mod+Shift+$right move right
    # ditto, with arrow keys
    #bindsym $mod+Shift+Left move left
    #bindsym $mod+Shift+Down move down
    #bindsym $mod+Shift+Up move up
    #bindsym $mod+Shift+Right move right
#
# Workspaces:
#
    # switch to workspace
    bindsym $mod+1 workspace 1; exec --no-startup-id notify-send -t 1000 "Workspace 1"
    bindsym $mod+2 workspace 2; exec --no-startup-id notify-send -t 1000 "Workspace 2"
    bindsym $mod+3 workspace 3; exec --no-startup-id notify-send -t 1000 "Workspace 3"
    bindsym $mod+4 workspace 4; exec --no-startup-id notify-send -t 1000 "Workspace 4"
    bindsym $mod+5 workspace 5; exec --no-startup-id notify-send -t 1000 "Workspace 5"
    bindsym $mod+6 workspace 6; exec --no-startup-id notify-send -t 1000 "Workspace 6"
    bindsym $mod+7 workspace 7; exec --no-startup-id notify-send -t 1000 "Workspace 7"
    bindsym $mod+8 workspace 8; exec --no-startup-id notify-send -t 1000 "Workspace 8"
    bindsym $mod+9 workspace 9; exec --no-startup-id notify-send -t 1000 "Workspace 9"
    bindsym $mod+0 workspace 10; exec --no-startup-id notify-send -t 1000 "Workspace 10"
    # move focused container to workspace
    bindsym $mod+Shift+1 move container to workspace 1; exec --no-startup-id notify-send -t 1000 "Moved To Workspace 1"
    bindsym $mod+Shift+2 move container to workspace 2; exec --no-startup-id notify-send -t 1000 "Moved To Workspace 2"
    bindsym $mod+Shift+3 move container to workspace 3; exec --no-startup-id notify-send -t 1000 "Moved To Workspace 3"
    bindsym $mod+Shift+4 move container to workspace 4; exec --no-startup-id notify-send -t 1000 "Moved To Workspace 4"
    bindsym $mod+Shift+5 move container to workspace 5; exec --no-startup-id notify-send -t 1000 "Moved To Workspace 5"
    bindsym $mod+Shift+6 move container to workspace 6; exec --no-startup-id notify-send -t 1000 "Moved To Workspace 6"
    bindsym $mod+Shift+7 move container to workspace 7; exec --no-startup-id notify-send -t 1000 "Moved To Workspace 7"
    bindsym $mod+Shift+8 move container to workspace 8; exec --no-startup-id notify-send -t 1000 "Moved To Workspace 8"
    bindsym $mod+Shift+9 move container to workspace 9; exec --no-startup-id notify-send -t 1000 "Moved To Workspace 9"
    bindsym $mod+Shift+0 move container to workspace 10; exec --no-startup-id notify-send -t 1000 "Moved To Workspace 10"
    # Note: workspaces can have any name you want, not just numbers.
    # We just use 1-10 as the default.
#
# Layout stuff:
#
    # You can "split" the current object of your focus with
    # $mod+b or $mod+v, for horizontal and vertical splits
    # respectively.
    bindsym $mod+b splith
    bindsym $mod+v splitv

    # Switch the current container between different layout styles
    bindsym $mod+s layout stacking
    bindsym $mod+w layout tabbed
    bindsym $mod+e layout toggle split

    # Make the current focus fullscreen
    bindsym $mod+f fullscreen

    # Toggle the current focus between tiling and floating mode
    bindsym $mod+Shift+space floating toggle

    # Swap focus between the tiling area and the floating area
    bindsym $mod+space focus mode_toggle

    # move focus to the parent container
    bindsym $mod+a focus parent
#
# Scratchpad:
#
    # Sway has a "scratchpad", which is a bag of holding for windows.
    # You can send windows there and get them back later.

    # Move the currently focused window to the scratchpad
    bindsym $mod+Shift+minus move scratchpad

    # Show the next scratchpad window or hide the focused scratchpad window.
    # If there are multiple scratchpad windows, this command cycles through them.
    bindsym $mod+minus scratchpad show
#
# Resizing containers:
#
mode "resize" {
    # left will shrink the containers width
    # right will grow the containers width
    # up will shrink the containers height
    # down will grow the containers height
    bindsym $left resize shrink width 10px
    bindsym $down resize grow height 10px
    bindsym $up resize shrink height 10px
    bindsym $right resize grow width 10px

    # ditto, with arrow keys
    #bindsym Left resize shrink width 10px
    #bindsym Down resize grow height 10px
    #bindsym Up resize shrink height 10px
    #bindsym Right resize grow width 10px

    # return to default mode
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

#
# Audio controls
#
###################################### REVISE #########################################
    bindsym XF86AudioRaiseVolume exec amixer -q -D pulse sset Master 5%+ && pkill -RTMIN+1 i3blocks 
    bindsym XF86AudioLowerVolume exec amixer -q -D pulse sset Master 5%- && pkill -RTMIN+1 i3blocks
    bindsym XF86AudioMute exec amixer -q -D pulse sset Master toggle && pkill -RTMIN+1 i3blocks
###################################### REVISE #########################################
#
# Media controls
#
    bindsym XF86AudioPlay exec playerctl play
    bindsym XF86AudioPause exec playerctl pause
    bindsym XF86AudioNext exec playerctl next
    bindsym XF86AudioPrev exec playerctl previous

#
# Sreen brightness controls
#
    bindsym XF86MonBrightnessUp exec light -A 5 # increase screen brightness
    bindsym XF86MonBrightnessDown exec light -U 5 # decrease screen brightness

#
# Network controls
#
    bindsym --release XF86WLAN exec --no-startup-id \
    [[ "$(sudo rfkill -no SOFT list wlan)" = "unblocked" ]] \
    && notify-send -t $notification_timeout --icon=network-wireless "Wireless LAN ON" \
    || notify-send -t $notification_timeout --icon=network-wireless -u low "Wireless LAN OFF"
    
    bindsym --release XF86Bluetooth exec --no-startup-id \
    [[ "$(sudo rfkill -no SOFT list bluetooth)" = "unblocked" ]] \
    && notify-send -t $notification_timeout --icon=network-wireless "Bluetooth ON" \
    || notify-send -t $notification_timeout --icon=network-wireless -u low "Bluetooth OFF"

#
# Touchpad controls
#
#    bindsym XF86TouchpadToggle exec /some/path/toggletouchpad.sh # toggle touchpad


#
# Rofi Menu
#
    #bindsym $mod+Shift+s exec rofigen ~/dotfiles/rofi_scripts/system_power.sh
    bindsym $mod+Shift+a exec rofigen ~/dotfiles/rofi_scripts/laptop_menu.sh

